/* universal */

body {
  background-color:#222222;
  color: #ddd;
}

.container {
  max-width: 1110px;
}

.text-black {
  color: #222222;
}

.bg-black {
  background-color: #111111;
}

.floating-label {
  color: black;
}

/* square forms */

.btn {
  border-radius: 0 !important;
}

.input-group-text,
.form-control,
.form-select {
  border-radius: 0 !important;
}

/* header */

#navbar-custom {
  height: 60px;
}

#nav-logo {
  height: 40px;
}

.avatar {
  border-radius: 50%;
}

.nav-text-icon {
  height: 48px;
  width: 48px;
  font-size: 2em;
  margin-top: -0.5rem;
}

.nav-icon {
  height: 32px;
  width: 32px;
  margin: auto;
}

.nav-item:hover {
  background-color: #313131;
}

.dropdown-toggle::after {
    content: none;
}

/* tools  */

.tool-title {
  font-weight: bold;
  font-size: 50px;
  margin-bottom: 10px;
  margin-right: 5px;
}

.tool-box {
  display: inline-block;
  width: 150px;
  text-align: center;
}

.tool-box-icon {
  font-size: 130px;
  margin: -30px
}

.tool-box-title {
  font-size: 20px;
  text-align: center;
}

/* tables */
.icon-table {
  height: 40px;
}

// Link Unstyled

.link-unstyled {
  &,
  &:visited,
  &:hover,
  &:active,
  &:focus,
  &:active:hover {
    font-style: inherit;
    color: inherit;
    background-color: transparent;
    font-size: inherit;
    text-decoration: none;
    font-variant: inherit;
    font-weight: inherit;
    line-height: inherit;
    font-family: inherit;
    border-radius: inherit;
    border: inherit;
    outline: inherit;
    box-shadow: inherit;
    padding: inherit;
    vertical-align: inherit;
  }
}

/* Forms */
/* Switches with input group */
.switch-group {
  margin-top: 0 !important;
  margin-bottom: 0 !important;
  border-radius: 0px !important;
}

.input-group-text-wrap {
  white-space: normal;
  max-width: 150px;
}

/* Pills for army groups */

.pill-army {
  width: 5.5em;
  text-align: left;
  font-size: 14px;
  font-weight: normal;
  vertical-align: middle;
}

<% ARMY_GROUPS.each do | k,v | %>
  .pill-<%= k.to_s %> {
    background-color: <%= v[:color] %>;
  }
<% end %>

.pill-army-text {
  text-transform: uppercase;
}

/* Popovers in modals */
.popover {
    z-index: 1060;
}

/* miscellaneous */

.debug_dump {
  background-color: white;
  clear: both;
  float: left;
  width: 100%;
  margin-top: 45px;
}
