/* universal */

body {
  background-color:#222222;
  color: #ddd;
}

.container {
  max-width: 1110px;
}

.text-black {
  color: #222222;
}

.bg-black {
  background-color: #111111;
}

.floating-label {
  color: black;
}

/* square forms */

.btn {
  border-radius: 0 !important;
}

.input-group-text,
.form-control,
.form-select {
  border-radius: 0 !important;
}

:disabled {
  cursor: not-allowed !important;
}

.dropdown-menu {
  border-radius: 0 !important;
}

.modal-content {
  border-radius: 0 !important;
}


/* Text area submit */

.textarea-submit {
  position: absolute;
  bottom: 0;
  right: 0;
  z-index: 300;
}


/* Bootstrap select styling */

.dropdown-toggle-custom {
  cursor: default !important;
}

.dropdown-toggle-custom::after {
  font-family: "bootstrap-icons";
  content: "\f282";
  position: absolute;
  margin-left: -25px;
  font-size: 12px;
  font-weight: bolder;
  margin-top: 10px;
}

.dropdown-toggle-text-color {
  color: #343a40 !important;
}

.dropdown-toggle {
  cursor: default !important;
  background: none;
}

.dropdown-toggle:hover {
  cursor: default !important;
  background: none;
}

.filter-option {
  cursor: default !important;
}

.filter-option-inner {
  cursor: default !important;
}

.filter-option-inner-inner {
  cursor: default !important;
}

.filter-option:hover {
  cursor: default !important;
}

.filter-option-inner:hover {
  cursor: default !important;
}

.filter-option-inner-inner:hover {
  cursor: default !important;
}

.icon-select {
  height: 19px;
}

/* header */

#navbar-custom {
  height: 60px;
}

#nav-logo {
  height: 40px;
}

.avatar {
  border-radius: 50%;
}

.nav-text-icon {
  height: 48px;
  width: 48px;
  font-size: 2em;
  margin-top: -0.5rem;
}

.nav-icon {
  height: 32px;
  width: 32px;
  margin: auto;
}

.nav-item:hover {
  background-color: #313131;
}

.dropdown-toggle::after {
  content: none !important;
}

/* tools  */

.tool-title {
  font-weight: bold;
  font-size: 50px;
  margin-bottom: 10px;
  margin-right: 5px;
}

.tool-box {
  display: inline-block;
  width: 150px;
  text-align: center;
}

.tool-box-icon {
  font-size: 130px;
  margin: -30px
}

.tool-box-title {
  font-size: 20px;
  text-align: center;
}

/* tables */
.icon-table {
  height: 40px;
}

// Link Unstyled

.link-unstyled {
  &,
  &:visited,
  &:hover,
  &:active,
  &:focus,
  &:active:hover {
    font-style: inherit;
    color: inherit;
    background-color: transparent;
    font-size: inherit;
    text-decoration: none;
    font-variant: inherit;
    font-weight: inherit;
    line-height: inherit;
    font-family: inherit;
    border-radius: inherit;
    border: inherit;
    outline: inherit;
    box-shadow: inherit;
    padding: inherit;
    vertical-align: inherit;
  }
}

/* Forms */
/* Switches with input group */
.switch-group {
  margin-top: 0 !important;
  margin-bottom: 0 !important;
  border-radius: 0px !important;
}

.input-group-text-wrap {
  white-space: normal;
  max-width: 150px;
}

/* Pills for army groups */

.pill-army {
  text-align: left;
  font-size: 14px;
  font-weight: normal;
  vertical-align: middle;
}

<% ARMY_GROUPS.each do | k,v | %>
  .pill-<%= k.to_s %> {
    background-color: <%= v[:color] %>;
  }
<% end %>

.pill-army-text {
  text-transform: uppercase;
}

.pill-army-group {
  width: 5.5em;
}

/* Popovers in modals */
.popover {
    z-index: 1060;
}

/* Inline Edit */
.inline-edit-input {
  border: solid var(--bs-success);
  width: 100%;
  margin-left: -5px;
  background: none;
  color: inherit;
  border-width: thin;
  padding: 0.475rem 0.75rem;
}

.inline-edit-input-focus {
  background: white;
  color: black;
}

/* Highlight table-striped */
.table-highlight {
  --bs-table-bg: #ffff99 !important;
  --bs-table-striped-bg: #ffff99 !important;
  --bs-table-color: black !important;
  --bs-table-striped-color: black !important;
}

/* miscellaneous */

.debug_dump {
  background-color: white;
  clear: both;
  float: left;
  width: 100%;
  margin-top: 45px;
}
