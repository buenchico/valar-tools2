/* universal */

@font-face {
    font-family: 'caesar_dressingregular';
    src: url('./fonts/caesardressing-regular-webfont.woff2') format('woff2'),
         url('./fonts/caesardressing-regular-webfont.woff') format('woff');
    font-weight: normal;
    font-style: normal;
}

@font-face {
    font-family: 'enchanted_land';
    src: url('./fonts/enchanted_land.woff2') format('woff2'),
         url('./fonts/enchanted_land.woff') format('woff');
    font-weight: normal;
    font-style: normal;
}

body {
  background-color: var(--bs-dark);
  color: var(--bs-light);
  padding-top: 46px; /* Adjust based on navbar height */
}

.container {
  max-width: 1110px;
}

.text-black {
  color: #222222;
}

.text-brass {
  color: #cd7f32;
}

.text-byzantium {
  color: #702963;
}

.bg-black {
  background-color: #111111 !important;
}

.bg-brass {
  background-color: #cd7f32 !important;
}

.bg-byzantium {
  background-color: #702963 !important;
}

.floating-label {
  color: black;
}

.army-str-data {
  width: 200px;
}

/* square forms */

.btn {
  border-radius: 0 !important;
}

.input-group-text,
.form-control,
.form-select {
  border-radius: 0 !important;
}

.form-control:focus {
	border-color: #0f82af; /* Use #0f82af for the border */
	box-shadow: 0 0 0 0.25rem rgba(15, 130, 175, 0.5); /* Shadow with a soft #0f82af tint */
}

:disabled {
  cursor: not-allowed !important;
}

.dropdown-menu {
  border-radius: 0 !important;
}

.modal-content {
  border-radius: 0 !important;
}

.nav-pills .nav-link {
  border-radius: 0 !important;
}

.alert {
  border-radius: 0 !important;
}

.card {
  border-radius: 0 !important;
}

/* Text area s-ubmit */

.textarea-submit {
  position: absolute;
  bottom: 0;
  right: 0;
  z-index: 300;
}

// Small nav link
.nav-links-sm {
  padding-top: 0.25rem;
  padding-bottom: 0.25rem;
  padding-left: 0.5rem;
  padding-right: 0.5rem;
  font-size: 0.75rem;
}

// Autocomplete in modals

.ui-autocomplete {
    z-index: 1500;
}

/* Bootstrap select styling */

.dropdown-toggle-custom {
  cursor: default;
}

.dropdown-toggle-custom::after {
  font-family: "bootstrap-icons";
  content: "\f282";
  position: absolute;
  margin-left: -25px;
  font-size: 12px;
  font-weight: bolder;
  margin-top: 10px;
}

.dropdown-toggle-text-color {
  color: #343a40 !important;
}

.dropdown-toggle {
  cursor: default;
  background: none;
}

.dropdown-toggle:hover {
  cursor: default;
  background: none;
}

/* filters */

.filter-option {
  cursor: default;
}

.filter-option-inner {
  cursor: default;
}

.filter-option-inner-inner {
  cursor: default;
}

.filter-option:hover {
  cursor: default;
}

.filter-option-inner:hover {
  cursor: default;
}

.filter-option-inner-inner:hover {
  cursor: default;
}

.icon-select {
  height: 19px;
}

/* header */

#nav-logo {
  height: 40px;
}

.avatar {
  border-radius: 50%;
}

.nav-text-icon {
  height: 48px;
  width: 48px;
  font-size: 2em;
  margin-top: -0.5rem;
}

.nav-icon {
  height: 32px;
  width: 32px;
  margin: auto;
}

.nav-item:hover {
  background-color: var(--bs-dark);
}

.nav-item.dropdown:has(.dropdown-toggle.show) {
  background-color: var(--bs-dark);
}

.dropdown-toggle::after {
  content: none !important;
}

.searchbox-container {
  position: absolute;
  width: 90%;
  max-width: 640px;
  max-height: 70vh;
  overflow-y: auto; /* Enables vertical scrolling */
}

/* Kaminari */

.page-link {
  border-radius: 0 !important;
	position: relative;
	display: block;
	padding: var(--bs-pagination-padding-y) var(--bs-pagination-padding-x);
	font-size: var(--bs-pagination-font-size);
	color: var(--bs-light);
	text-decoration: none;
	background-color: var( --bs-dark);
	border: var(--bs-pagination-border-width) solid var(--bs-primary);
}

.page-link.disabled {
  background-color: var( --bs-dark);
}

/* tools  */

.tool-title {
  font-weight: bold;
  font-size: 50px;
  margin-bottom: 10px;
  margin-right: 5px;
}

.tool-box {
  display: inline-block;
  width: 150px;
  text-align: center;
}

.tool-box-icon {
  font-size: 130px;
  margin: -30px
}

.tool-box-title {
  font-size: 20px;
  text-align: center;
}

/* tables */
.icon-table {
  height: 40px;
}

.sorter-icon {
  white-space: nowrap;
  font-size: 0.6em;
}

.no-wrap-column {
  white-space: nowrap;
}

/* Selectpicker to overflow table responsive */
.table-responsive-selectpicker {
  overflow: visible;
  position: relative;
}

// Link Unstyled

.link-unstyled {
  &,
  &:visited,
  &:hover,
  &:active,
  &:focus,
  &:active:hover {
    font-style: inherit;
    color: inherit;
    background-color: transparent;
    font-size: inherit;
    text-decoration: none;
    font-variant: inherit;
    font-weight: inherit;
    line-height: inherit;
    font-family: inherit;
    border-radius: inherit;
    border: inherit;
    outline: inherit;
    box-shadow: inherit;
    padding: inherit;
    vertical-align: inherit;
  }
}

/* Forms */

/* Form clear button */
.form-control-clearable {
  position: relative !important;
  margin-left: -35px;
  z-index: 100 !important;
}

/* Switches with input group */
.switch-group {
  margin-top: 0 !important;
  margin-bottom: 0 !important;
  border-radius: 0px !important;
}

.input-group-text-wrap {
  white-space: normal;
  max-width: 150px;
}

.input-group-text {
  background-color: var( --bs-dark);
  color: var( --bs-light);
  font-variant: small-caps;
}

/* Pills for army groups */

.pill-tags {
  text-align: left;
  font-weight: normal;
  vertical-align: inherit;
}

<% ARMY_GROUPS.each do | k,v | %>
  .pill-<%= k.to_s %> {
    background-color: <%= v[:color] %>;
  }
<% end %>

.pill-tags-text {
  text-transform: uppercase;
}

.pill-tags-group {
  width: 5.5em;
}

/* Popovers in modals */
.popover {
    z-index: 1060;
}

/* Inline Edit */
.inline-edit-input {
  border: solid var(--bs-success);
  width: 100%;
  margin-left: -5px;
  background: none;
  color: inherit;
  border-width: thin;
  padding: 0.475rem 0.75rem;
}

.inline-edit-input-focus {
  background: white;
  color: black;
}

/* Highlight table-striped */
.table-highlight {
  --bs-table-bg: #ffff99 !important;
  --bs-table-striped-bg: #ffff99 !important;
  --bs-table-color: black !important;
  --bs-table-striped-color: black !important;
  --bs-table-hover-bg: #ffff99 !important;
  --bs-table-hover-color: black !important;
}

.highlight {
  background-color: #ffff99 !important;
  color: black !important;
}
/* Loading animation */
.loader {
  position: relative;
  border: 16px solid #f3f3f3; /* Light grey */
  border-top: 16px solid #3498db; /* Blue */
  border-radius: 50%;
  width: 120px;
  height: 120px;
  animation: spin 2s linear infinite;
  z-index: 999999;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* Button no style */
.btn-no-style {
  border: none;
  background-color: transparent;
  padding: 0;
  font: inherit;
  cursor: pointer;
  outline: inherit;
}

.btn-no-click {
  display: inline-block; /* Ensures inline-block display */
  cursor: default; /* Prevents hand cursor */
  pointer-events: none; /* Disables any click behavior */
}

/* Text buttons */

.btn-text {
  display: inline-block; /* Ensures inline-block display */
}

/* Copy action button position */

.copy-icon {
  position: absolute;
  right: 10px;
}

/* Game selector size */
.game-select {
  width: 300px !important;
}

.btn-game-select {
  height: 50px !important;
}

/* inactive rows */

.inactive {
  opacity: 0.4;
}

.raised {
  font-weight: bold !important;
}

/* cards */

.active-card {
  border-color: yellow;
}

/* clocks */

.clock {
  width: 250px;
  height: 300px;
}

.clock-inline {
  width: 60px;
  height: 60px;
  font-size: 60px; /* Ensure the icon scales properly */
}

.clock-inline .bi {
  display: block;
  margin-top: -38px;
}


/* map */

.leaflet-popup-content-wrapper {
  border-radius: 0 !important;
  background-color: #757575;
}

/* miscellaneous */

.debug_dump {
  background-color: white;
  clear: both;
  float: left;
  width: 100%;
  margin-top: 45px;
}

/* calendar */
.row-striped:nth-of-type(odd){
  background-color: var(--bs-dark);
  border-left: 10px var(--bs-dark) solid;
}

.row-striped:nth-of-type(even){
  background-color: var(--bs-gray-700);
  border-left: 10px var(--bs-gray-700) solid;
}

.calendar-accent {
  border-left: 10px var(--bs-danger) solid !important;
}

/* Missions dice */

.dice-container {
  position: relative;
  width: 50px !important;
}

.dice-image {
  width: 100%;
  height: auto;
}

.dice-text {
  position: absolute;
  top: 30%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 24px
}

@media (min-width: 768px) {
  .dice-container {
    width: 80px !important;
  }
}

/* New checkbox */

.option-input {
  -webkit-appearance: none;
  -moz-appearance: none;
  -ms-appearance: none;
  -o-appearance: none;
  appearance: none;
  top: 5px;
  right: 0;
  bottom: 0;
  left: 0;
  height: 20px;
  width: 20px;
  background: var(--bs-light);
  border: none;
  color: var(--bs-dark);
  cursor: pointer;
  display: inline-block;
  margin-right: 0.5rem;
  outline: none;
  position: relative;
  z-index: 1000;
}
.option-input:hover {
  background: var(--bs-primary);
}
.option-input:checked {
  background: var(--bs-primary);
}
.option-input:checked::before {
  height: 20px;
  width: 20px;
  position: absolute;
  content: "\F62A";
  font-family: 'bootstrap-icons';
  display: inline-block;
  font-size: 20px;
  text-align: center;
  line-height: 20px;
}

.option-input.radio {
  border-radius: 50%;
}
.option-input.radio::after {
  border-radius: 50%;
}

/* Hide native number controls */

/* Chrome, Safari, Edge, Opera */
input[type=number]::-webkit-outer-spin-button,
input[type=number]::-webkit-inner-spin-button {
  -webkit-appearance: none;
  margin: 0;
}

/* Firefox */
input[type=number] {
  -moz-appearance: textfield;
}

/* Readonly fields to display as disabled */
input[readonly],
textarea[readonly],
select[readonly] {
  background-color: #e9ecef;
  cursor: not-allowed;
}
