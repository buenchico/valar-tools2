// Copy selected to clipboard
$(document).on('turbolinks:load', function () {
  if ($(".travel.index").length !== 0 ) {

    $("#path_type_btn").click(function() {
      if ($(this).val() == 'land') {
        $(this).val('sea')
        $('#type').val('sea')
        $('.sea').removeClass('d-none')
        $('.sea').prop('disabled', false);
        $('.land').addClass('d-none')
        $('.land').prop('disabled', true);
      } else {
        $(this).val('land')
        $('#type').val('land')
        $('.land').removeClass('d-none')
        $('.land').prop('disabled', false);
        $('.sea').addClass('d-none')
        $('.sea').prop('disabled', true);
      }
    })

    $('#close_results').click(function() {
      $('#result').addClass('d-none')
    })

    $(document).on("click", ".remstep", function() {
      $(this).parent().remove();
    });
  }
});
