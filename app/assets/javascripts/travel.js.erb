// Change from land to sea
$(document).on('turbolinks:load', function () {
  if ($(".travel").length !== 0 ) {

    $('#close_results').click(function() {
      $('#result').addClass('d-none')
    })

    $('#size').on('change', function() {
      var size = $(this).val();
      var mod = Math.floor((-1 + Math.sqrt(1 + 8 * size)) / 2);
      $('#size_mod').html(mod);
    });

    $(document).on("click", ".remstep", function() {
      $(this).closest('.step').remove();
    });
  }
});
