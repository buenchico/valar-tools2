<div>
  <table class="table table-dark table-striped table-borderless table-hover table-sm table-responsive align-middle sortable">
    <caption>Lista de Herramientas</caption>
      <thead>
        <tr>
          <th scope="col" style="width: 25px"></th>
          <th scope="col">Herramienta</th>
          <th scope="col">Rol</th>
          <th scope="col">Partidas</th>
          <th scope="col">Opciones</th>
          <th scope="col" class="text-center" style="width: 75px">Activa</th>
          <th scope="col" colspan="1"></th>
        </tr>
      </thead>
      <tbody>
        <% @tools.each do |tool| %>
          <tr class="<%= tool.active == true ? "" : "active" %>" >
            <td><i class="<%= tool.icon_url %>"></i></td>
            <td><%= tool.title %></td>
            <td><%= tool.role %></td>
            <td><%= tool.games.pluck(:title).join(", ") %></td>
            <td><%= tool&.options.to_json %></td>
            <td class="text-center">
              <% if tool.active == true  %>
                <i class="bi bi-check-lg"></i>
              <% else %>
                <i class="bi bi-x-lg"></i>
              <% end %>
            </td>
            <td>
              <%= link_to edit_tool_path(tool), remote: true do %>
                <i class="bi bi-pencil-square text-white"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
  </table>
</div>
