<div class="table-responsive">
  <table class="table table-dark table-striped table-borderless table-hover table-sm align-middle sortable">
    <caption><%=  @tool.title %></caption>
    <thead>
      <tr>
        <th scope="col">Nombre (ES)</th>
        <th scope="col">Nombre (EN)</th>
        <th scope="col">Descripcci칩n</th>
        <th scope="col">Etiquetas</th>
        <th scope="col">Regi칩n</th>
        <th scope="col">Se침or</th>
        <% if @current_user.is_master? %>
          <th scope="col" class="text-center">Visible</th>
          <th scope="col">Partida</th>
        <% end %>
        <th scope="col" colspan="2" data-sorter="false"></th>
      </tr>
    </thead>
    <tbody>
      <% @locations.each do | location | %>
        <tr>
          <td><%= location.name_es %></td>
          <td><%= location.name_en %></td>
          <td><%= truncate(location.description, length: 100, omission: '...') %></td>
          <td><%= location.tags.join(",") %></td>
          <td><%= location.region %></td>
          <td><%= location.family&.title %></td>
          <% if @current_user&.is_master? %>
            <td class="text-center">
              <% if location.visible == true  %>
                <i class="bi bi-check-lg"></i>
              <% else %>
                <i class="bi bi-x-lg"></i>
              <% end %>
            </td>
          <% end %>
          <td><%= link_to '', send("location_path", location.id), remote: true, class: 'bi bi-eye-fill text-white' %></td>
          <% if @current_user&.is_master? %>
            <td><%= link_to '',   send("edit_location_path", location.id), remote: true, class: 'bi bi-pencil-square text-white' %></td>
            <td>
              <%= link_to send("location_path", location.id), method: :delete, data: { confirm: "Est치s seguro de eliminar el objeto #{location.name}?" }, remote: true do %>
                <i class="bi bi-trash text-white"></i>
              <% end %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
    </table>
  </div>
