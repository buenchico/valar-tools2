<div class="table-responsive">
  <table class="table table-dark table-striped table-borderless table-hover table-sm align-middle sortable">
    <caption><%=  @tool.title %></caption>
    <thead>
      <tr>
        <th scope="col">Nombre</th>
        <th scope="col">Etiquetas</th>
        <th scope="col">Se침or</th>
        <th scope="col">Facci칩n</th>
        <th scope="col" data-sorter="false">Descripcci칩n</th>
        <% if @current_user&.is_master? %>
          <th scope="col" class="text-center" data-sorter="false">Visible</th>
          <th scope="col">Partida</th>
        <% end %>
        <th scope="col" colspan="2" data-sorter="false"></th>
      </tr>
    </thead>
    <tbody>
      <% @families.each do | family | %>
        <tr>
          <td><%= family.title %></td>
          <td>
            <% family.tags.each do | tag | %>
              <span class="badge rounded-pill pill-tags pill-tags-text bg-success"><%= tag %></span>
            <% end %>
          </td>
          <td><%= family.lord&.title %></td>
          <td><%= family.faction&.long_name.nil? ? ' ' : link_to(family.faction.long_name, 'factions?id=' + family.faction.id.to_s, class: 'text-white') %></td>
          <td><%= truncate(family.description, length: 100, omission: '...') %></td>
          <% if @current_user&.is_master? %>
            <td class="text-center">
              <% if family.visible == true  %>
                <i class="bi bi-check-lg"></i>
              <% else %>
                <i class="bi bi-x-lg"></i>
              <% end %>
            </td>
            <td><%= family.game.title %></td>
          <% end %>
          <td><%= link_to '', send("family_path", family.id), remote: true, class: 'bi bi-eye-fill text-white' %></td>
          <% if @current_user&.is_master? %>
            <td><%= link_to '',   send("edit_family_path", family.id), remote: true, class: 'bi bi-pencil-square text-white' %></td>
            <td>
              <%= link_to send("family_path", family.id), method: :delete, data: { confirm: "Est치s seguro de eliminar el objeto #{family.name}?" }, remote: true do %>
                <i class="bi bi-trash text-white"></i>
              <% end %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
    </table>
  </div>
