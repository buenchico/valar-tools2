<!-- Scaffold for basic tools -->

<% provide(:title, @tool.title) %>
<% provide(:icon, @tool.icon_url) %>

<div class="tool-title">
    <i class="white <%= yield(:icon) %>"></i>
    <%= yield(:title) %>
</div>

<div class="row my-3">
  <div class="col">
    <% if @current_user&.is_master? %>
      <%= link_to send('new_family_path'), class: "btn btn-primary", remote: true do %>
        <i class="bi bi-plus-circle"></i> <%= t('helpers.submit.create', model: t('activerecord.models.' + @tool.name.singularize, count: 1) ) %>
      <% end %>
      <%= button_tag(type: 'submit', class: "btn btn-danger btn-sm", value: "import") do %>
        <%= t('helpers.submit.import') %>
      <% end %>
      <%= link_to t('helpers.submit.export'), export_families_path(format: :csv), class: 'btn btn-danger btn-sm' %>
    <% end %>
  </div>
  <div class="col-6">
    <div class="d-flex align-items-center justify-content-end">
      <%= select_tag "filter", options_for_select(@filter), id: "filterselect", class: "form-select form-select-sm me-2" %>
      <input id="filtertext" class="form-control form-control-sm" type="text" placeholder="Filtrar...">
    </div>
  </div>
</div>

<%= render "families_table" %>
