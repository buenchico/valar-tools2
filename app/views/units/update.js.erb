const checkbox_status = $('#id_unit_<%= @unit.id %>').is(":checked");

$('#unit_<%= @unit.id %>').html('<%= j render "row", unit: @unit  %>');

$('#unit_<%= @unit.id %>').addClass("table-highlight", callback )

function callback() {
  setTimeout(function() {
    $('#unit_<%= @unit.id %>').removeClass( "table-highlight" );
  }, 500 );
}

$("#flash").html('<%= j render partial: "layouts/alert" %>');

$("#id_unit_<%= @unit.id %>").prop("checked", checkbox_status);

$(".modal").modal('hide');

$.fn.table_sorter();
$.fn.checkbox_listeners();
$.fn.checkboxSelectable();
initPopovers();
$.fn.inline_listeners();
