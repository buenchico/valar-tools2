<i class="bi bi-<%= unit.army_icon %> text-<%= unit.colour %>"></i>
<% if defined?(link) && link.present? %>
  <%= link_to(unit.name, unit_path(unit.id), remote: true, class: 'text-reset') %>
<% else %>
  <%= unit.name %>
<% end %>
<%= render 'units/traits', unit: unit %>
<% if unit.factions.present? %>
  (<%= unit.factions.pluck(:long_name).join(", ") %>)
<% end %>
