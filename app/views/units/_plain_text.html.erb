<%= unit.name %>
<%= number_to_compact(unit.count.to_i) %>
<%= unit.type_name %>
<% unit.tags.each do |tag| %>
  <% tag_options = @unit_tags.fetch(tag, {}) %>
  <%= tag_options.fetch('name', tag).titleize %>
<% end %>

<% if unit.factions.present? %>
  (<%= unit.factions.pluck(:long_name).join(", ") %>)
<% end %>
