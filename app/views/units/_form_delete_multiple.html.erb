<div class="modal fade" id="armyModal" tabindex="-1" role="dialog" aria-labelledby="Login" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content bg-dark text-light">
      <div class="modal-header">
        <h5 class="modal-title" id="Title"><%= t('helpers.action.mass_delete') %></h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="container-fluid">
          <%= form_for :unit, url: destroy_multiple_units_path, method: :put do | form | %>
            <div class="alert alert-warning">
              <div>Las siguientes unidades serÃ¡n eliminadas</div>
              <ul>
                <% units.each do | unit | %>
                  <%= hidden_field_tag "unit_ids[]", unit.id %>
                  <li>
                    <%= unit.name %>
                    <%= render 'one_line', unit: unit %>
                  </li>
                <% end %>
              <ul>
            </div>
            <div class="input-group mt-3">
              <%= form.text_field :confirm, class: "form-control", placeholder: t('helpers.validate.delete') %>
            </div>
            <div class="input-group mt-3">
              <%= form.submit t('helpers.submit.delete_multiple', model: t('activerecord.models.unit', count: 2)), class: 'btn btn-primary' %>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>
