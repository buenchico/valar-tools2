  $('#content').html("<%= j render 'form_multiple_destroy', armies: @armies %>");
}

if ('<%= @action %>' == 'damage') {
  $('#content').html("<%= j render 'form_multiple_damage', armies: @armies %>");
}

if ('<%= @action %>' == 'import') {
  $('#content').html("<%= j render 'form_multiple_import' %>");
}

if ('<%= @action %>' == 'stats') {
  $('#content').html("<%= j render 'form_multiple_stats' %>");
}

