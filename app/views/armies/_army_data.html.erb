<% if !army.id.nil? %>
  <div id="result" class="card mb-3 border-primary bg-dark">
    <div class="card-body">
      <div class="card-title">
        <button type="button" id="copy_army" class="btn-no-style text-light float-end me-1" aria-label="Copy" data-bs-toggle="tooltip" data-bs-placement="top" title="Copiar ejército">
          <i class="bi bi-clipboard2-fill"></i>
        </button>
      </div>
      <p class="card-text">
        <%= army&.name %> (<i class="bi bi-award"></i><%= army&.strength %>)
        <%= ((100 - army.hp) / @options["hp"]["step"])&.nonzero? ? ('<span class="badge rounded-pill pill-tags pill-tags-text bg-danger me-1 mt-1"><i class="bi bi-' + @options["hp"]["icon"] + '"></i> ' + @options["hp"]["name"].capitalize + " " + number_to_army_attribute(((army.hp - 100) / @options["hp"]["step"])) + '</span>').html_safe : nil %>

        <% @options["attributes"].each_with_index do | (key, value), index | %>
          <%= (army["col#{index}"]&.nonzero? ? ('<span class="badge rounded-pill pill-tags pill-tags-text bg-primary me-1 mt-1"><i class="bi bi-' + value["icon"] + '"></i> ' + value["name"].capitalize + " " + number_to_army_attribute(army["col#{index}"]) + '</span>').html_safe : nil ) %>
        <% end %>

        <% army.tags.each do | tag | %>
          <span class="badge rounded-pill pill-tags pill-tags-text bg-success me-1 mt-1"><i class="bi bi-<%= @options['tags'][tag]['icon'] %>"></i> <%= @options["tags"][tag]["name"].capitalize %></span>
        <% end %>
        <% if @current_user.is_master? %>
          [id: #<%= sprintf('%04d', army.id) %>]
        <% end %>
      </p>
      <div class="d-none" id="army-data">
        <% traits = [] %>
        <% ((100 - army.hp) / @options["hp"]["step"])&.nonzero? ? traits << (@options["hp"]["name"].capitalize + " " + number_to_army_attribute(((army.hp - 100) / @options["hp"]["step"]))).html_safe : nil %>
        <% @options["attributes"].each_with_index do | (key, value), index | %>
          <% (army["col#{index}"]&.nonzero? ? traits << (value["name"].capitalize + " " + number_to_army_attribute(army["col#{index}"])).html_safe : nil ) %>
        <% end %>
        <% army.tags.each do | tag | %>
          <% traits << @options["tags"][tag]["name"].capitalize %>
        <% end %>
        <%= army.name %> (<%= army.status %>)<%= army.position.blank? ? nil : ", en #{army.position} " %><%= army.group.blank? ? nil : "grupo " + ARMY_GROUPS[army.group.to_sym][:name].upcase %> FUE: <%= army.strength %><%= traits.blank? ? nil : "[" + traits.join(", ") + "]" %>
      </div>
    </div>
  </div>

  <div class="input-group mb-3">
    Este ejército está compuesto por <%= (@options["soldiers"] * ( army.hp.to_f / 100)).to_i %> hombres y tiene una fuerza de combate&nbsp;<i class="bi bi-award"></i><%= army.strength %>
  </div>
<% end %>
