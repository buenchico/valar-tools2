
<div class="ms-3">
   <i class="bi bi-award"></i> <%= t('activerecord.attributes.unit.strength') %>: <%= army.strength %>
</div>
<div class="ms-3">
  <i class="bi bi-crosshair"></i> <%= t('activerecord.attributes.unit.strength_indirect') %>: <%= army.strength_indirect %>
</div>
<div class="ms-3">
  <i class="bi bi-heart-fill"></i> <%= t('activerecord.attributes.unit.hp') %>: <%= number_with_delimiter(army.hp, delimiter: ' ', separator: ',') %>
</div>
<div class="ms-3">
  <i class="bi bi-person-standing"></i> <%= t('activerecord.attributes.unit.men') %>: <%= number_with_delimiter(army.men, delimiter: ' ', separator: ',') %>
  <% if army.locations.present? %>
     — <span class="small">Provenientes de <strong><%= army.locations.map { |l| l.name }.join(", ") %></strong></span>
  <% end %>
  <% if army.families.present? %>
     — <span class="small">Al servicio de <strong><%= army.families.map { |f| f.title }.join(", ") %></strong></span>
  <% end %>
</div>
