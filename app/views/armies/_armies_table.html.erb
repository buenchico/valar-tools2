<div class="table-responsive">
  <table id="army_list" class="table table-dark table-striped table-borderless table-hover table-sm sortable army_list">
    <caption>Lista de ejércitos</caption>
    <thead>
      <tr id="table_title">
        <th data-sorter="false" scope="col"><input type="checkbox" class="checkbox_select_all" /></th>
        <th scope="col" style="width: 78px"><i class="bi bi-award"></i></th>
        <th scope="col">Ejército</th>
        <th scope="col">Estado</th>
        <th scope="col">Rasgos</th>
        <th scope="col">Posición</th>
        <th scope="col">Grupo</th>
        <% if @current_user&.is_master? %>
          <th scope="col">Visibilidad</th>
        <% end %>
        <th scope="col" colspan="3" data-sorter="false"></th>
      </tr>
    </thead>
    <tbody id="table_body">
      <div class="d-flex justify-content-center">
        <div id="spinner-main" class="spinner-border fs-1 d-none" role="status">
          <span class="visually-hidden">Loading...</span>
        </div>
      </div>
      <% @armies&.each do |army| %>
        <tr id="army_<%= army.id %>" class="army_<%= army.id %> <%= army.status == 'Aniquilado' ? 'destroyed' : '' %><%= army.status == 'Alzado' ? 'mobilized' : '' %>">
          <%= render 'row_container', army: army %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
