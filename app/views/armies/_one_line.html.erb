<i class="bi bi-<%= army.icon %> text-<%= army.colour %>"></i>
<% if defined?(link) && link.present? %>
  <%= link_to(army.name, army_path(army.id), remote: true, class: 'text-reset') %>
<% else %>
  <%= army.name %>
<% end %>
<%= render 'armies/traits', army: army %>
<% if army.position.present? %>
  , en <%= army.position %>
<% end %>
<% if army.group.present? %>
  , grupo <span class='badge rounded-pill pill-tags pill-<%= army.group %>'><i class='bi bi-<%= ARMY_GROUPS.fetch(army.group.to_sym, {}).fetch(:icon, nil) %>'></i> <span class='pill-tags-text'><%= ARMY_GROUPS.fetch(army.group.to_sym, {}).fetch(:name, nil) %></span></span>
<% end %>
