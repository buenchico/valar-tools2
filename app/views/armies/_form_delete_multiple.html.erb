<div class="modal fade" id="armyModal" tabindex="-1" role="dialog" aria-labelledby="Login" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content bg-dark text-light">
      <div class="modal-header">
        <h5 class="modal-title" id="Title"><%= t('helpers.action.mass_delete') %></h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="container-fluid">
          <%= form_for :army, url: destroy_multiple_armies_path, remote: true, method: :put do | form | %>
            <div class="alert alert-warning">
              <div>Los siguientes ejércitos serán eliminados</div>
              <ul>
                <% armies.each do | army | %>
                  <%= hidden_field_tag "army_ids[]", army.id %>
                  <li>
                    <%= render 'armies/one_line', army: army %>
                  </li>
                <% end %>
              </ul>
              <hr class="border border-secondary opacity-75 border-2">
              <div>
                <a class="link-unstyled" data-bs-toggle="collapse" href="#collapseUnits" role="button" aria-expanded="false" aria-controls="collapseUnits">
                  <i class="bi bi-plus-circle"></i> Las siguientes unidades serán afectadas:
                </a>
              </div>
              <div class="collapse" id="collapseUnits">
                <ul>
                  <% units.each do | unit | %>
                    <%= hidden_field_tag "unit_ids[]", unit.id %>
                    <li>
                      <%= render 'units/one_line', unit: unit %>
                    </li>
                  <% end %>
                <ul>
              </div>
            </div>
            <hr class="border border-secondary opacity-75 border-2">
            <div class="input-group mt-3">
              <%= form.text_field :confirm, class: "form-control", placeholder: t('helpers.validate.delete') %>
            </div>
            <div class="input-group mt-3">
              <%= form.submit t('helpers.submit.delete_multiple', model: t('activerecord.models.army', count: 2)), class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
