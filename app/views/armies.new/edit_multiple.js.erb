$(".modal").modal('hide');

if ('<%= @action %>' == 'update') {
  $('#content').html("<%= j render 'form_multiple_update', armies: @armies, action: @action %>");
}

if ('<%= @action %>' == 'destroy') {
  $('#content').html("<%= j render 'form_multiple_destroy', armies: @armies, action: @action %>");
}

if ('<%= @action %>' == 'damage') {
  $('#content').html("<%= j render 'form_multiple_damage', armies: @armies, action: @action %>");
}

if ('<%= @action %>' == 'import') {
  $('#content').html("<%= j render 'form_multiple_import', action: @action %>");
}

$('#armyModal').modal('show');
