$('#army_list').find('tbody').append('<tr id="army_<%= @army.id.to_s %>"></tr>');
$('#army_<%= @army.id %>').html('<%= j render "row", army: @army  %>');

$('.army_<%= @army.id %>').addClass( "table-highlight", callback )

function callback() {
  setTimeout(function() {
    $('.army_<%= @army.id %>').removeClass( "table-highlight" );
  }, 500 );
}

