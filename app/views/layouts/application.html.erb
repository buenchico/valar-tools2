<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %></title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'screen',
                                              'data-turbolinks-track': 'reload' %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= favicon_link_tag asset_path('favicon.ico') %>
  </head>

  <body class="<%= controller_name %> <%= action_name %>">
    <%= render 'layouts/header' %>
    <div id="flash">
      <%= render 'layouts/alert', flash: flash %>
    </div>
    <div class="container content mt-3">
      <%= yield %>
      <div id='content'></div>
      <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay='1000'>
          <div class="toast-header">
            <strong id="toast-title" class="me-auto"></strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
          </div>
        </div>
      </div>
    </div>
    <%= debug(params) if Rails.env.development? %>
    <% if Rails.env.development? %>
      <%= button_to login_hammer_path, method: :post, class: 'btn btn-sm btn-danger', form_class: 'm-auto' do %>
        <i class="fas fa-user"></i> Iniciar sesión como Hammer/Player
      <% end %>
      <%= button_to login_nemo_path, method: :post, class: 'btn btn-sm btn-danger', form_class: 'm-auto' do %>
        <i class="fas fa-user"></i> Iniciar sesión como Nemo/Master
      <% end %>
      <%= button_to login_admin_path, method: :post, class: 'btn btn-sm btn-danger', form_class: 'm-auto' do %>
        <i class="fas fa-user"></i> Iniciar sesión como Valar/Admin
      <% end %>
    <% end %>
  </body>
</html>
