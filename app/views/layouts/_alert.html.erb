<% method = (method || "base" ) %>
<% thing = (thing || nil ) %>
<% message_type = (message_type || "danger") %>

<% flash.each do |message_type, message| %>
  <div class="container mt-3 mx-auto text-center alert alert-<%= message_type %>">
    <% if message.class == Hash %>
      <h2><%= t("messages.error.#{method}", thing: thing) %></h2>
      <ul class="list-unstyled text-left">
      <% message.values.each do |msg| %>
        <% msg.each do |m| %>
          <li><%= m %></li>
        <% end %>
      <% end %>
      </ul>
    <% else %>
      <%= message.html_safe %>
    <% end %>
    <button type="button" class="btn-close float-end" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
